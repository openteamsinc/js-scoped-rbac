{
  "name": "scoped-rbac",
  "version": "0.0.1",
  "description": "A scoped RBAC policy engine for use with django-scoped-rbac or any other scoped RBAC implementation.",
  "main": "scoped-rbac.js",
  "scripts": {
    "test": "ava",
    "build": "tsc -b",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "tsc": "tsc"
  },
  "author": "David Charboneau",
  "license": "MIT",
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "ava": "^3.9.0",
    "prettier": "^2.0.5",
    "tape": "^5.0.1",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.9.5"
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "test/": "lib/__test__/"
      }
    }
  },
  "files": [
    "lib/**/*"
  ]
}
